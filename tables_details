CREATE TRIGGER testTrigger ON dbo.dvw_SaleInformation
FOR INSERT
AS
INSERT INTO Harish_Test1
    (BillDate,BillAmount,BillNumber)
    SELECT
        Billtime,Billamount,BillNumber
        FROM inserted
GO
